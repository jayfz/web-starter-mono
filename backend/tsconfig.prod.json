{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "allowJs": false,
    "outDir": "./dist",
    "newLine": "lf",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
  },
  "include": ["./src"]
}
